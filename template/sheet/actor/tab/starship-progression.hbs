<div class="vehiclegrid progression">
    <div class="airtop flex wrap">
        <div class="airexperience border">
            <h1>{{localize "TITLE.SHIPHARDPOINTS"}}</h1>
            <div class="item-list">
                <div class="information">
                    <label>{{localize "SHIP.PROW"}}</label>
                    <input name="system.weaponprow" type="number" value="{{system.weaponprow}}" data-dtype="Number" />
                </div>
                <div class="information">
                    <label>{{localize "SHIP.DORSAL"}}</label>
                    <input name="system.weapondorsal" type="number" value="{{system.weapondorsal}}" data-dtype="Number"  />
                </div>
                <div class="information">
                    <label>{{localize "SHIP.STARBOARD"}}</label>
                    <input name="system.weaponstar" type="number" value="{{system.weaponstar}}" data-dtype="Number"  />
                </div>
                <div class="information">
                    <label>{{localize "SHIP.PORT"}}</label>
                    <input name="system.weaponport" type="number" value="{{system.weaponport}}" data-dtype="Number" />
                </div>
                <div class="information">
                    <label>{{localize "SHIP.KEEL"}}</label>
                    <input name="system.weaponkeel" type="number" value="{{system.weaponkeel}}" data-dtype="Number" />
                </div>
            </div>
        </div>
        <div class="airexperience border">
            <h1>{{localize "TITLE.SHIPCOMBAT"}}</h1>
            <div class="information">
                <label>{{localize "SHIP.VOIDUNITS"}}</label>
                <input name="system.voidunits" type="number" value="{{system.voidunits}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "VEHICLE.MANEUVER"}}</label>
                <input name="system.vehiclemaneuver" type="number" value="{{system.vehiclemaneuver}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.ARMOUR"}}</label>
                <input name="system.shiparmour" type="number" value="{{system.shiparmour}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.TURRET"}}</label>
                <input name="system.turretrating" type="number" value="{{system.turretrating}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.VOIDSHIELD"}}</label>
                <input name="system.voidshield" type="number" value="{{system.voidshield}}" data-dtype="Number" />
            </div>
        </div>
        <div class="airexperience border">
            <h1>{{localize "TITLE.SHIPSTATS"}}</h1>
            <div class="information">
                <label>{{localize "SHIP.SPACECAP"}}</label>
                <input name="system.shipspace" type="number" value="{{system.shipspace}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.POWERCAP"}}</label>
                <input name="system.shippower" type="number" value="{{system.shippower}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.SHIPCOST"}}</label>
                <input name="system.spcost" type="number" value="{{system.spcost}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.SQUADCAP"}}</label>
                <input name="system.squadcap" type="number" value="{{system.squadcap}}" data-dtype="Number" />
            </div>
            <div class="information">
                <label>{{localize "SHIP.DETECTION"}}</label>
                <input name="system.shipdetection" type="number" value="{{system.shipdetection}}" data-dtype="Number" />
            </div>
        </div>
    </div>
    <div class="airbot">
        <div class="vehiclegrid2 flex wrap">
            <div class="talents border vehicleleft1">
                <h1>{{localize "TITLE.TALENTS"}}</h1>
                <div class="item-list">
                    <div class="flex header">
                        <b class="name">{{localize "TALENT.NAME"}}</b>
                        <b class="cost">{{localize "TALENT.COST"}}</b>
                        <a class="button item-create" title="Add Talent" data-type="talent"><i class="fas fa-plus"></i></a>
                    </div>
                    <div class="items">
                        {{#each actor.items as |item|}}
                            {{#if item.isTalent}}
                                <div class="talent item flex row" data-item-id="{{item.id}}">
                                    <div class="flex talent-row item-edit">
                                        <div class="image-container">
                                            <div class="image" style="background-image: url('{{item.img}}')"></div>
                                        </div>
                                        <div class="name">{{item.name}}</div>
                                    </div>
                                    <input class="item-cost" type="number" value="{{item.cost}}" data-dtype="Number" />
                                    <div class="button">
                                        <a class="item-control item-delete" title="Delete Talent"><i class="fas fa-trash"></i></a>
                                    </div>
                                </div>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="flex column vehicleleft2" style="flex-basis: 50%">
                <div class="characteristics border">
                    <h1>{{localize "TITLE.CHARACTERISTICS"}}</h1>
                    <div class="item-list">
                        <div class="flex header">
                            <b class="name">{{localize "CHARACTERISTIC.NAME"}}</b>
                            <b class="advance">{{localize "CHARACTERISTIC.ADVANCE"}}</b>
                            <b class="unnatural">{{localize "CHARACTERISTIC.UNNATURAL"}}</b>
                            <b class="modifystat">{{localize "CHARACTERISTIC.DAMAGE"}}</b>
                            <b class="base">{{localize "CHARACTERISTIC.BASE"}}</b>
                            <b class="cost">{{localize "CHARACTERISTIC.COST"}}</b>
                        </div>
                        <div class="items">
                            {{#each system.characteristics as |characteristic key|}}
                                <div class="characteristic item flex row">
                                    <div class="name">{{localize characteristic.label}}</div>
                                    <select class="advance" name="system.characteristics.{{key}}.advance" data-dtype="Number">
                                        {{#select characteristic.advance}}
                                            <option value="0">{{localize "ADVANCE.NONE"}}</option>
                                            <option value="5">{{localize "ADVANCE.SIMPLE"}}</option>
                                            <option value="10">{{localize "ADVANCE.INTERMEDIATE"}}</option>
                                            <option value="15">{{localize "ADVANCE.TRAINED"}}</option>
                                            <option value="20">{{localize "ADVANCE.PROFICIENT"}}</option>
                                            <option value="25">{{localize "ADVANCE.EXPERT"}}</option>
                                        {{/select}}
                                    </select>
                                    <input class="unnatural" name="system.characteristics.{{key}}.unnatural" type="number" value="{{characteristic.unnatural}}" data-dtype="Number" />
                                    <input class="modifystat" name="system.characteristics.{{key}}.damage" type="number" value="{{characteristic.damage}}" data-dtype="Number" />
                                    <input class="base" name="system.characteristics.{{key}}.base" type="number" value="{{characteristic.base}}" data-dtype="Number" />
                                    <input class="cost" name="system.characteristics.{{key}}.cost" type="number" value="{{characteristic.cost}}" data-dtype="Number" />
                                </div>
                            {{/each}}
                         </div>
                    </div>
                </div>
            </div>
            <div class="skills border vehicleright">
                <h1>{{localize "TITLE.SKILLS"}}</h1>
                <div class="item-list">
                    <div class="flex header">
                        <b class="name">{{localize "SKILL.NAME"}}</b>
                        <b class="advance">{{localize "SKILL.ADVANCE"}}</b>
                        <b class="total">{{localize "SKILL.TOTAL"}}</b>
                        <b class="cost">{{localize "SKILL.COST"}}</b>
                    </div>
                    <div class="items">
                        {{#each system.skills as |skill key|}}
                            {{#unless skill.isSpecialist}}
                                <div class="skill item flex row">
                                    <div class="name">{{localize skill.label}}</div>
                                    <select class="advance" name="system.skills.{{key}}.advance" data-dtype="Number">
                                        {{#select skill.advance}}
                                            <option value="-20">{{localize "ADVANCE.UNTRAINED"}}</option>
                                            <option value="0">{{localize "ADVANCE.KNOWN"}}</option>
                                            <option value="10">{{localize "ADVANCE.TRAINED"}}</option>
                                            <option value="20">{{localize "ADVANCE.EXPERT"}}</option>
                                            <option value="30">{{localize "ADVANCE.VETERAN"}}</option>
                                        {{/select}}
                                    </select>
                                    <input class="total" name="system.skills.{{key}}.total" type="number" value="{{skill.total}}" data-dtype="Number" disabled />
                                    <input class="cost" name="system.skills.{{key}}.cost" type="number" value="{{skill.cost}}" data-dtype="Number" />
                                </div>
                            {{/unless}}
                        {{/each}}
                        {{#each system.skills as |skill key|}}
                            {{#if skill.isSpecialist}}
                                <div class="flex header">
                                    <b class="name">{{localize skill.label}}</b>
                                </div>
                                {{#each skill.specialities as |speciality keySpe|}}
                                    <div class="speciality item flex row">
                                        <div class="name">{{localize speciality.label}}</div>
                                        <select class="advance" name="system.skills.{{key}}.specialities.{{keySpe}}.advance" data-dtype="Number">
                                            {{#select speciality.advance}}
                                                <option value="-20">{{localize "ADVANCE.UNTRAINED"}}</option>
                                                <option value="0">{{localize "ADVANCE.KNOWN"}}</option>
                                                <option value="10">{{localize "ADVANCE.TRAINED"}}</option>
                                                <option value="20">{{localize "ADVANCE.EXPERT"}}</option>
                                                <option value="30">{{localize "ADVANCE.VETERAN"}}</option>
                                            {{/select}}
                                        </select>
                                        <input class="total" name="system.skills.{{key}}.specialities.{{keySpe}}.total" type="number" value="{{speciality.total}}" data-dtype="Number" disabled />
                                        <input class="cost" name="system.skills.{{key}}.specialities.{{keySpe}}.cost" type="number" value="{{speciality.cost}}" data-dtype="Number" />
                                    </div>
                                {{/each}}
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>