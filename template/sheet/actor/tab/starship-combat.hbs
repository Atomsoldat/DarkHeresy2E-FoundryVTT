<div class="flex wrap combat">
    <div class="wounds border">
        <h1>{{localize "TITLE.INTEGRITY"}}</h1>
        <div class="information">
            <label>{{localize "WOUND.TOTAL"}}</label>
            <input name="system.wounds.max" type="number" value="{{system.wounds.max}}" data-dtype="Number" />
        </div>
        <div class="information">
            <label>{{localize "WOUND.CURRENT"}}</label>
            <input name="system.wounds.value" type="number" value="{{system.wounds.value}}" data-dtype="Number" />
        </div>
        <div class="information">
            <label>{{localize "WOUND.CRITICAL_DAMAGE"}}</label>
            <input name="system.wounds.critical" type="number" value="{{system.wounds.critical}}" data-dtype="Number" />
        </div>
        <div class="item-list">
            <div class="flex header">
                <b class="name">{{localize "VEHICLE.CRIT"}}</b>
                <a class="button item-create" title="Add Critical Injury" data-type="criticalInjury"><i class="fas fa-plus"></i></a>
            </div>
            <div class="items">
                {{#each actor.items as |item|}}
                    {{#if item.isCriticalInjury}}
                        <div class="wound item flex row" data-item-id="{{item.id}}">
                        <div class="flex wound-row item-edit">
                            <div class="image-container">
                                <div class="image" style="background-image: url('{{item.img}}')"></div>
                            </div>
                            <div class="name">{{item.name}}</div>
                        </div>
                        <div class="button">
                            <a class="item-control item-delete" title="Delete Critical Injury"><i class="fas fa-trash"></i></a>
                        </div>
                    </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="armour border">
        <h1>{{localize "TITLE.ARMOUR"}}</h1>
        <div class="armour-row">
            <div class="part" style="margin-right: 50px">
                <div class="name">{{localize "SHIP.BOW"}}</div>
                <input class="total" type="number" value="{{system.shiparmour}}" data-dtype="Number" disabled />
            </div>
        </div>
        <div class="armour-row">
            <div class="part">
                <div class="name">{{localize "SHIP.PORT"}}</div>
                <input class="total" type="number" value="{{system.shiparmour}}" data-dtype="Number" disabled />
                <input class="total" type="number" value="{{system.shiparmour}}" data-dtype="Number" disabled />
                <div class="name">{{localize "SHIP.STARBOARD"}}</div>
            </div>
        </div>
        <div class="armour-row">
            <div class="part" style="margin-right: 50px">
                <div class="name">{{localize "SHIP.STERN"}}</div>
                <input class="total" type="number" value="{{system.shiparmour}}" data-dtype="Number" disabled />
            </div>
        </div>
    </div>
    <div class="movement border">
        <h1>{{localize "TITLE.SHIPSTATS"}}</h1>
        <div class="information">
            <label>{{localize "SHIP.VOIDUNITS"}}</label>
            <input  type="number" value="{{system.voidunits}}" data-dtype="Number" disabled/>
        </div>
        <div class="information">
            <label>{{localize "VEHICLE.MANEUVER"}}</label>
            <input type="number" value="{{system.vehiclemaneuver}}" data-dtype="Number" disabled />
        </div>
        <div class="information">
            <label>{{localize "SHIP.VOIDSHIELD"}}</label>
            <input type="number" value="{{system.voidshield}}" data-dtype="Number" disabled />
        </div>
        <div class="information">
            <label>{{localize "SHIP.TURRET"}}</label>
            <input  type="number" value="{{system.turretrating}}" data-dtype="Number" disabled />
        </div>
        <h1 style="margin-top: 5px">{{localize "TITLE.OTHER"}}</h1>
        <div class="information">
            <label>{{localize "INITIATIVE"}}</label>
            <input name="system.initiative.base" type="text" value="{{system.initiative.base}}" />
        </div>
        <div class="information">
            <label>{{localize "SHIP.DETECTION"}}</label>
            <input type="number" value="{{system.shipdetection}}" data-dtype="Number" disabled/>
        </div>
    </div>
    <div class="starshipweapons border">
        <h1>{{localize "TITLE.WEAPONS"}}</h1>
        <div class="item-list">
            <div class="flex header">
                <b class="name">{{localize "WEAPON.NAME"}}</b>
                <b class="weaponslot">{{localize "SHIP.SLOT"}}</b>
                <b class="class">{{localize "WEAPON.CLASS"}}</b>
                <b class="range">{{localize "WEAPON.RANGE"}}</b>
                <b class="rate-of-fire">{{localize "SHIP.WEAPON.STRENGTH"}}</b>
                <b class="penetration">{{localize "SHIP.WEAPON.CRIT"}}</b>
                <b class="damage">{{localize "WEAPON.DAMAGE"}}</b>
                <b class="special">{{localize "WEAPON.SPECIAL"}}</b>
            </div>
            <div class="items">
                {{#each actor.items as |item|}}
                    {{#if item.isStarshipWeapon}}
                        <div class="weapon item flex row" data-item-id="{{item.id}}">
                            <div class="flex name">
                                <div class="image-container">
                                    <div class="image" style="background-image: url('{{item.img}}')"></div>
                                </div>
                                <button class="roll-shipweapon">{{item.name}}</button>
                            </div>
                            <div class="weaponslot">{{item.ShipSlot}}</div>
                            <div class="class">{{item.ShipWeaponClass}}</div>
                            <div class="range">{{item.range}}</div>
                            <div class="rate-of-fire">{{item.shipStrength}}</div>
                            <div class="penetration">{{item.shipCritical}}</div>
                            <div class="damage">{{item.damage}}</div>
                            <div class="special">{{item.special}}</div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>